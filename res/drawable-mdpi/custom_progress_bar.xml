    -->
    <!-- Define the progress properties like start color, end color etc -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="2dp" >
            </corners>
                <gradient
                    android:angle="270"
                    android:centerColor="#ba079f"
                    android:centerY="1.0"
                    android:endColor="#ba079f"
                    android:startColor="#ba079f" />
            </shape>
        </clip>
    </item>

</layer-list>